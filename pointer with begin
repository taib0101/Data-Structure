#include<stdio.h>
#include<stdlib.h>
#include<iostream>
using namespace std;

int main()
{
    char *ch = "I am taib";
    cout<<"pointer string adress = "<<&ch<<endl;
    int n = 2 , *ptr1,**ptr2;
    ptr1 = &n;
    ptr2 = &ptr1;
    cout<<"size of integer = "<<sizeof(int)<<endl;

    printf("Adress of  ptr = %p, n = %p\n",ptr1,&n);
    printf("**ptr2= %d , n = %d",**ptr2,n);
    return 0;
}
