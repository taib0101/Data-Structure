// implemantation of first
#include<bits/stdc++.h>
using namespace std;
struct node
{
    int n;
    struct node *left;
    struct node *right;
}*head = NULL;

void make(struct node *ptr, int arr[], int x, int i)
{
    if(i >= x)
        return;
    struct node *root1 = (struct node *) malloc(sizeof(struct node));
    root1 -> left = NULL;
    root1 -> right = NULL;
    root1 -> n = arr[2*i+1];

    struct node * root2 = (struct node *) malloc(sizeof(struct node));
    root2 -> left = NULL;
    root2 -> right = NULL;
    root2 -> n = arr[2*i+2];

    ptr -> left = root1;
    ptr -> right = root2;

    make(ptr -> left,arr,x,2*i+1);
    make(ptr -> right,arr,x,2*i+2);
}
void show(struct node *ptr,vector < int > vc)
{
    if(ptr -> left == NULL && ptr -> right == NULL)
    {
        for(int i = 0; i < vc.size(); ++i)
            cout << vc[i] << " ";
        cout << endl;
        return;
    }

    vc.push_back(ptr -> n);
//    cout << ptr -> n << endl;
    show(ptr -> left,vc);
    show(ptr -> right,vc);
}
int main()
{
    int arr[] = {1,2,3,4,5,6,7};
    int x = sizeof(arr) / sizeof(arr[0]);
    struct node *root = (struct node *) malloc(sizeof(struct node));
    root -> n = arr[0];
    root -> left = NULL;
    root -> right = NULL;
    head = root;
    make(head, arr, x, 0);
    vector < int > vc;
    show(head,vc);
    return 0;
}
